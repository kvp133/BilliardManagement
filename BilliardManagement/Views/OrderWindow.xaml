<Window x:Class="BilliardManagement.Views.OrderWindow"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   xmlns:local="clr-namespace:BilliardManagement"
         xmlns:uc="clr-namespace:BilliardManagement.Views"
   mc:Ignorable="d"
   Style="{StaticResource MaterialDesignWindow}"
   Title="Manager Order" Height="450" Width="800"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
TextElement.Foreground="{DynamicResource MaterialDesignBody}"
TextElement.FontWeight="Regular"
TextElement.FontSize="13"
TextOptions.TextFormattingMode="Ideal"
        WindowStartupLocation="CenterScreen"
TextOptions.TextRenderingMode="Auto"
Background="{DynamicResource MaterialDesignPaper}"
FontFamily="{DynamicResource MaterialDesignFont}"
DataContext="{StaticResource OrderVM}">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <!--Menu-->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">

                </Grid>
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0"></Grid>
                    <Grid Grid.Column="1">
                        <ComboBox
                            Text="{Binding SearchTable,UpdateSourceTrigger=PropertyChanged}"
 materialDesign:ComboBoxAssist.MaxLength="200"
 materialDesign:HintAssist.Hint="Search"
 materialDesign:HintAssist.HintOpacity=".26"
 IsEditable="True"
>

                        </ComboBox>
                    </Grid>

                </Grid>
            </Grid>


            <!--các element binding từ selected item-->
            <materialDesign:Card Grid.Row="0" Margin="5">
                <WrapPanel Margin="0 0 0 10">
                    <ComboBox ItemsSource="{Binding ListTable, UpdateSourceTrigger=PropertyChanged}" 
          SelectedItem="{Binding SelectedTable, Mode=TwoWay}" 
          Margin="5 5 15 5" 
          materialDesign:HintAssist.Hint="Table" 
          Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding TableNumber}"></TextBlock>
                                    <TextBlock Text=" - "></TextBlock>
                                    <TextBlock Text="{Binding Status}"></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <ComboBox ItemsSource="{Binding ListProduct, UpdateSourceTrigger=PropertyChanged}" 
          SelectedItem="{Binding SelectedProduct, Mode=TwoWay}" 
          Margin="5 5 15 5" 
          materialDesign:HintAssist.Hint="Product" 
          Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding ProductName}"></TextBlock>
                                    <TextBlock Text=" - "></TextBlock>
                                    <TextBlock Text="{Binding Price}"></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" Margin="5 5 15 5" materialDesign:HintAssist.Hint="Quantity" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                </WrapPanel>
                


    
            </materialDesign:Card>

            <materialDesign:Card Grid.Row="1" Margin="5">
                <WrapPanel>
                    <Button Command="{Binding AddCommand}" Content="Add" Margin="5" Width="100"></Button>
                    <Button Command="{Binding EditCommand}" Content="Edit" Margin="5" Width="100"></Button>
                    <Button Command="{Binding DeleteCommand}" Content="Delete" Margin="5" Width="100"></Button>
                </WrapPanel>
            </materialDesign:Card>
            
               
        

            <materialDesign:Card Grid.Row="3" Margin="5" VerticalAlignment="Stretch">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListView ItemsSource="{Binding List}" SelectedItem="{Binding SelectedItem, Mode=OneWayToSource}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="auto" Header="Id" DisplayMemberBinding="{Binding BookingDetailId}"></GridViewColumn>
                                <GridViewColumn Width="100"  Header="Order Id" DisplayMemberBinding="{Binding Booking.BookingId}"></GridViewColumn>
                                <GridViewColumn Width="200"  Header="Table" DisplayMemberBinding="{Binding Booking.Table.TableNumber}"></GridViewColumn>
                                <GridViewColumn Width="120" Header="Product" DisplayMemberBinding="{Binding Product.ProductName}"></GridViewColumn>
                                <GridViewColumn Width="200" Header="Price" DisplayMemberBinding="{Binding Product.Price}"></GridViewColumn>
                                <GridViewColumn Width="auto" Header="Quantity" DisplayMemberBinding="{Binding Quantity}"></GridViewColumn>
                                
                            </GridView>
                        </ListView.View>
                    </ListView>
                </ScrollViewer>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Window>
